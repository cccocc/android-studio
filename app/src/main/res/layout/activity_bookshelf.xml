<!-- activity_bookshelf.xml -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/lead_search"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="vertical"
        android:background="@drawable/toolbar_title_background">
        <TextView
            android:id="@+id/text_guide_entry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="新手引导"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/edittext_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="搜索书籍和新闻"
            android:background="#ffffff"/>
    </LinearLayout>

    <GridView
        android:id="@+id/gridview_books"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/lead_search"
        android:numColumns="2"
        android:verticalSpacing="16dp"
        android:horizontalSpacing="16dp" />

</RelativeLayout>
